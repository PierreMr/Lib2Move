{% extends 'base.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <h1>Contrat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contrat.id }}</td>
            </tr>
            <tr>
                <th>Max_km</th>
                <td>{{ contrat.maxKm }}</td>
            </tr>
            <tr>
                <th>Max_time</th>
                <td>{{ contrat.maxTime ? contrat.maxTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ contrat.price }}</td>
            </tr>
            <tr>
                <th>Km_penalty</th>
                <td>{{ contrat.kmPenalty }}</td>
            </tr>
            <tr>
                <th>Time_penalty</th>
                <td>{{ contrat.timePenalty }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contrat_index') }}">back to list</a>

    <a href="{{ path('contrat_edit', {'id': contrat.id}) }}">edit</a>

