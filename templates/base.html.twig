<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Lib2Move{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Lato|ZCOOL+KuaiLe" rel="stylesheet">
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <!-- <script type="text/javascript" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script> -->
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div id="navbar" class="mb-3">
            {% include('navs/main-navbar.html.twig') %}
        </div>

        <div class="container">
            <div class="flashes">
                {% for label, messages in app.flashes %}
                    {% set index = loop.index %}
                    {% for message in messages %}
                        <div class="flash flash-{{ label }}" style="top:{{ 0.5 + 4*index }}rem">
                            <strong>{{ message }}</strong>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

            {% block body %}

            {% endblock %}
        
        </div>

        <footer class="footer bg-light p-3 mt-5 border-top rounded-top shadow">
            <div class="container">
                <p>&copy; 2019 Lib2Move</p>
                <blockquote class="blockquote">
                    <footer class="blockquote-footer">Paris | Lyon</footer>
                </blockquote>
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app-bottom') }}
            <script>
              let myLatLng = {lat: parseFloat($('#lat').attr('data')), lng: parseFloat($('#lon').attr('data'))};

              function initMap() {
                let map = new google.maps.Map(document.getElementById('map'), {
                  center: myLatLng,
                  zoom: 18,
                  // mapTypeId: 'hybrid'
                });
                map.setTilt(45);

                var marker = new google.maps.Marker({
                  position: myLatLng,
                  map: map,
                  title: 'Emplacement v√©hicule'
                });
              }
            </script>
            <!-- <script async defer src="https://maps.googleapis.com/maps/api/js?key=env(MAPS_API_KEY)&callback=initMap"></script> -->
        {% endblock %}
    </body>
</html>
