{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Kilometers</th>
                <td>{{ location.kilometers }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ location.time ? location.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ location.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ location.createdAt ? location.createdAt|date('d/m/Y - H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ location.user.lastname }} {{ location.user.firstname }}</td>
            </tr>
            <tr>
                <th>Vehicule</th>
                <td>{{ location.vehicule.serialNumber }}</td>
            </tr>
            <tr>
                <th>Contrat</th>
                <td>{{ location.contrat.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_index') }}">Back to list</a>
    <a> | </a>
    <a href="{{ path('location_edit', {'id': location.id}) }}">Edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
